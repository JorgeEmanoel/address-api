{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Language and Environment */
    "target": "ES5",
    "baseUrl": "./",
    "rootDir": "./src",

    /* Modules */
    "module": "commonjs",
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
  },
  "exclude": [
    "src/**/*.test.ts"
  ]
}
